<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="home_text">
        <item name="android:textColor">#514b4b</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="quitBtn">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="game_text">
        <item name="android:textSize">20sp</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="popup">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:font">@font/bangers</item>
    </style>

    <style name="popupBtns">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/roundedbox</item>
    </style>
</resources>